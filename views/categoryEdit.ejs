<%- include("partials/header.ejs") %>
<body>
    <% if(conf == 1){ %>
        <%- include("partials/menu.ejs") %>
    <% }else{ %>
        <%- include("partials/menu2.ejs") %>
    <% } %>
    <br>
    <h1 style="text-align: center;">Editar categoria</h1>
    <br>
    <div class="boxCategory">
        <form method="post" action="/categoryEditSave" onsubmit="verifyForm(event, this)">
            <fieldset style="padding: 30px;">
                <label for="nomeCategory">Nome:</label><br>
                <input type="text" id="nomeCategory" name="nomeCategory" value="<%- category.nome %>" style="width: 700px;">
                <br>
                <br>
                <input type="hidden" value="<%- category.id %>" id="id" name="id">
                <center>
                    <input type="submit" class="btnMenu" value="Salvar alterações">
                </center>
            </fieldset>
        </form>
    </div>
</body>
<%- include("partials/footer.ejs") %>
<script>
    function verifyForm(e, form){
        e.preventDefault();

        let nome = document.getElementById("nomeCategory").value;

        if(nome != ""){
            form.submit();
        } else{
          window.alert("Coloque o nome da categoria");  
        }
    }
</script>
</html>